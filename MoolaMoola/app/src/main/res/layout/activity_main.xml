<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/rlChooseFile"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <Button android:layout_width="wrap_content"
            android:text="Select RAR file"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/btSelectRarFile"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:id="@+id/tvFileSelect"
              android:text="none"
              android:layout_centerVertical="true"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@+id/btSelectRarFile"
              android:layout_height="wrap_content"/>

</RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rlChooseFile"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <Button android:layout_width="wrap_content"
                android:text="Select folder save"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/btSelectTargetFolder"
                android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/tvFolderTarget"
                  android:text="none"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="5dp"
                  android:layout_toRightOf="@+id/btSelectTargetFolder"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ProgressBar android:layout_width="wrap_content"
                 android:visibility="gone"
                 android:id="@+id/progressBar"
                 android:layout_centerInParent="true"
                 android:layout_height="wrap_content"/>
</RelativeLayout>
